{
  "name": "simplidb-studio",
  "description": "Simple DataBase Client",
  "version": "0.1.0",
  "author": "Álvaro Ureña Carrillo <alvarourenacarrillo11@gmail.com>",
  "private": true,
  "main": "main/index.js",
  "scripts": {
    "clean": "rimraf --glob dist main renderer/out renderer/.next",
    "dev": "npm run build && electron .",
    "build-renderer": "next build renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run clean && npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:debug": "lldb ./dist/mac/electron-quick-start-typescript.app",
    "dist:unpack": "npx asar extract ./dist/mac/electron-quick-start-typescript.app/Contents/Resources/app.asar ./dist/unpack",
    "lint": "next lint renderer"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "electron-is-dev": "1.1.0",
    "electron-next": "3.1.5",
    "lucide-react": "^0.286.0",
    "next-themes": "^0.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "14.14.6",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "autoprefixer": "^10.4.16",
    "electron": "27.0.0",
    "electron-builder": "24.6.4",
    "eslint": "8.51.0",
    "eslint-config-next": "13.5.4",
    "next": "13.5.2",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "rimraf": "3.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "4.9.5"
  },
  "build": {
    "appId": "com.alvarourena.simplidbstudio",
    "productName": "SimpliDB-Studio",
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ]
  }
}
